# Example environment variables for Project Nexus
# Copy this file to .env or .env.local and fill in real values

# Django
SECRET_KEY=your-secret-key
DEBUG=False
ALLOWED_HOSTS=.onrender.com,vercel.app,localhost

# Database (Neon)
DATABASE_URL=postgres://fakeuser:fakepassword@fakehost/fakedb?sslmode=require

# CORS (no wildcards, list domains)
CORS_ALLOWED_ORIGINS=https://alx-project-nexus-social.vercel.app,http://localhost:3000

# CSRF (wildcards allowed)
CSRF_TRUSTED_ORIGINS=https://*.vercel.app,https://*.onrender.com,https://alx-project-nexus-social.vercel.app,https://alx-project-nexus-nvh6.onrender.com

# Frontend URL
FRONTEND_URL=https://alx-project-nexus-social.vercel.app

# Email (optional)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@example.com
