# ==============================================
# Project Nexus Backend - Environment Variables
# ==============================================
# Copy this file to .env and fill in real values
# NEVER commit .env files with real credentials to git

# ==============================================
# Django Core Settings
# ==============================================
# Generate a new secret key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-generate-a-new-one

# Debug mode - MUST be False in production
DEBUG=False

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=.onrender.com,.vercel.app,localhost,127.0.0.1

# ==============================================
# Database Configuration (Neon PostgreSQL)
# ==============================================
# Format: postgres://USER:PASSWORD@HOST/DATABASE?sslmode=require
# Get this from your Neon dashboard: https://console.neon.tech/
DATABASE_URL=postgres://user:password@host.neon.tech/dbname?sslmode=require

# ==============================================
# CORS Configuration
# ==============================================
# Comma-separated list of allowed origins (NO wildcards, must be exact URLs)
# Include both your production frontend and localhost for development
CORS_ALLOWED_ORIGINS=https://alx-project-nexus-social.vercel.app,http://localhost:3000

# ==============================================
# CSRF Configuration
# ==============================================
# Comma-separated list of trusted origins (wildcards allowed with https://*.domain.com)
CSRF_TRUSTED_ORIGINS=https://*.vercel.app,https://*.onrender.com,https://alx-project-nexus-social.vercel.app,https://alx-project-nexus-nvh6.onrender.com

# ==============================================
# Frontend URL
# ==============================================
# Used for password reset emails, redirects, etc.
FRONTEND_URL=https://alx-project-nexus-social.vercel.app

# ==============================================
# Email Configuration (Optional)
# ==============================================
# Required for password reset and email notifications
# For Gmail, use an App Password: https://support.google.com/accounts/answer/185833
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@projectnexus.app

# ==============================================
# JWT Configuration (Optional - defaults used if not set)
# ==============================================
# Access token lifetime in minutes (default: 60)
# JWT_ACCESS_TOKEN_LIFETIME=60
# Refresh token lifetime in days (default: 7)
# JWT_REFRESH_TOKEN_LIFETIME=7

